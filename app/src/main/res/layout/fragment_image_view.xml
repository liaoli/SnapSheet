<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_send_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/image_send_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/send_image_button_style" />

    <Button
        android:id="@+id/image_edit_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/image_send_button"
        android:layout_alignStart="@+id/image_send_button"
        android:layout_marginBottom="19dp"
        android:background="@drawable/ic_image_editor" />
</RelativeLayout>
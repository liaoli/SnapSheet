<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_send_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/image_edit_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/image_send_button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_image_editor" />

    <Button
        android:id="@+id/image_send_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/image_edit_button"
        android:layout_marginBottom="34dp"
        android:background="@drawable/send_image_button_style" />

    <Button
        android:id="@+id/set_timer_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/image_send_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:background="@drawable/timer_button" />

    <Button
        android:id="@+id/save_image_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/set_timer_button"
        android:layout_alignTop="@+id/set_timer_button"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/set_timer_button"
        android:background="@drawable/ic_save_image_button" />
</RelativeLayout>
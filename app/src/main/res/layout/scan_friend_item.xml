<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_friend_by_name_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/scan_friend_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="username"
            android:textIsSelectable="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/add_friend_near_by_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/profile_add_friends_button_style"
            android:text="add"
            android:textColor="@drawable/add_friend_button_text_color" />
    </LinearLayout>

</LinearLayout>